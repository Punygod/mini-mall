<view class="container">
    <image class="img" src="{{data.img}}" />
    <view class="content-container">
        <text class="title">{{data.title}}</text>
        <!-- æ ‡ç­¾ -->
        <view class="tags">
            <block wx:for="{{tags}}" wx:key="index">
                <l-tag l-class="l-tag">{{item}}</l-tag>
            </block>
        </view>
        <l-price wx:if="{{data.discount_price}}" value="{{data.discount_price}}"></l-price>
        <l-price value="{{data.price}}" deleted="{{data.discount_price?true:false}}"></l-price>
        <text>{{data.subtitle}}</text>
    </view>
</view>
