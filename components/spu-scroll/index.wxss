/* components/spu-scroll/index.wxss */
.container {
    padding:42rpx 28rpx 34rpx 28rpx;
    background-color: #ffffff;
}
.title {
    width: 694rpx;
    height: 90rpx;
}
.scroll-view {
    display: flex;
    flex-direction: row;
    margin-top: 28rpx;
}
.inner {
    display:flex;
    flex-direction: row;
}
.spu-container {
    display:flex;
    flex-direction: column;
    align-items: center;
    margin-right: 60rpx;
}
.spu-img {
    width: 160rpx;
    height: 160rpx;
}
.spu-text {
    font-size: 20rpx !important;
    color: #666666;
    /* 字符串自动截断 */
    width: 150rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}
.price-unit {
    font-size: 24rpx !important;
}
.price-value {
    font-size: 26rpx !important;
}